<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.MusicFileInfoPage"
             Title="MusicFileInfoPage"
             xmlns:viewmodel="clr-namespace:MusicPlayer.ViewModel"
             x:DataType="viewmodel:MusicFileInfoViewModel"
             Appearing="ContentPage_Appearing">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1"
                             EndPoint="1,1">
            <GradientStop Color="Black"
                          Offset="0.0"/>
            <GradientStop Color="MidnightBlue"
                          Offset="0.25"/>
            <GradientStop Color="MidnightBlue"
                          Offset="0.75"/>
            <GradientStop Color="Black"
                          Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <Border Padding="0,10,0,10"
            Margin="1"
            Stroke="White">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="30"/>
        </Border.StrokeShape>

        <StackLayout Orientation="Vertical">
            <Label Text="{Binding FileName}"
                   Padding="10,0,0,0"/>
            
            <Label Text="Authors: ..."
                   Padding="10,0,0,0"/>

            <Border Padding="0,20,0,10"
                    Margin="0,10,0,10"
                    Stroke="White"
                    VerticalOptions="FillAndExpand">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>

                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Horizontal">
                        <Label x:Name="CurrentPosition"
                               Text="0:00"
                               Margin="5,0,10,0"
                               VerticalOptions="Center"/>
                        
                        <Slider HorizontalOptions="FillAndExpand"/>
                        
                        <Label x:Name="Duration"
                               Text="-4:00"
                               Margin="10,0,5,0"
                               VerticalOptions="Center"/>
                    </StackLayout>

                    <Border Padding="0,10,0,10"
                            Margin="0,10,0,10"
                            Stroke="White"
                            VerticalOptions="FillAndExpand">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="30"/>
                        </Border.StrokeShape>

                        <VerticalStackLayout Padding="10">
                            <Label Text="{Binding MusicInfo}"/>
                        </VerticalStackLayout>
                    </Border>

                    <StackLayout Orientation="Horizontal"
                                 Margin="10,0,10,0">
                        <Button Text="Prev"
                                HorizontalOptions="StartAndExpand"/>
                        
                        <Button Text="Play"
                                HorizontalOptions="CenterAndExpand"
                                Pressed="ButtonPlay_Pressed"/>
                        
                        <Button Text="Next"
                                HorizontalOptions="EndAndExpand"
                                Pressed="ButtonNext_Pressed"/>
                    </StackLayout>
                </StackLayout>
            </Border>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Spacing="10">
                <Button Text="Repeat"
                        Pressed="ButtonRepeat_Pressed"/>
                
                <Button Text="Random"
                        Pressed="ButtonRandom_Pressed"/>
                
                <Button Text="Favourite"
                        Pressed="ButtonFavourite_Pressed"/>
            </StackLayout>
        </StackLayout>
    </Border>
</ContentPage>